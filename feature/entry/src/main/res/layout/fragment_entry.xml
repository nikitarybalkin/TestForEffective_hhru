<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".presentation.fragment.EntryFragment">

    <TextView
        android:id="@+id/tv_login_to_personal_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_to_your_personal_account"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_search_work"
        android:layout_width="0dp"
        android:layout_height="179dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/cv_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="232dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_search"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/ed_background"
                android:layout_marginTop="59dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:id="@+id/ic_letter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_letter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <EditText
                        android:id="@+id/et_email_or_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:hint="@string/email_or_phone"
                        android:textColorHint="@color/ed_hint_text"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/ic_letter"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <ImageView
                        android:id="@+id/ic_cross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cross"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_entered_uncorrected_email"
                android:textColor="@color/warning"
                android:fontFamily="@font/sf_pro_display_regular"
                app:layout_constraintTop_toBottomOf="@id/cv_et"
                app:layout_constraintStart_toStartOf="@+id/cv_et"
                android:visibility="gone"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/b_continue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/b_not_active_background"
                android:text="@string/continue_"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="@color/b_not_active_text"
                android:enabled="false"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@id/cv_et"
                app:layout_constraintStart_toStartOf="@id/cv_et"
                app:layout_constraintEnd_toStartOf="@id/tv_login"
                />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_with_password"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="14sp"
                android:textColor="@color/special_blue"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/b_continue"
                app:layout_constraintBottom_toBottomOf="@id/b_continue"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_b"
        android:layout_width="0dp"
        android:layout_height="141dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/cv_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_search_work"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_find_employees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_for_employees"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tv_posting_vacancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_for_employees"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_find_employees"
                app:layout_constraintStart_toStartOf="@id/tv_find_employees"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/b_i_find_employees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/b_green_background"
                app:cornerRadius="8dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="@string/i_find_employees"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_posting_vacancy" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>