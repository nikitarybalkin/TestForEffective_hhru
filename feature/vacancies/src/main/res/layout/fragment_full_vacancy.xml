<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.FullVacancyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/ic_eye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_eye"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ic_share"
            />

        <ImageView
            android:id="@+id/ic_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_share"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ic_favorite"
            />

        <ImageView
            android:id="@+id/ic_favorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_heart_not_activeted"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_vacancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title1"
            android:textColor="@color/white"
            android:layout_marginTop="26dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_back"
            />
        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text1"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/tv_vacancy"
            app:layout_constraintTop_toBottomOf="@id/tv_vacancy"
            />
        <TextView
            android:id="@+id/tv_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            style="@style/Text1"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/tv_salary"
            app:layout_constraintTop_toBottomOf="@id/tv_salary"
            />
        <TextView
            android:id="@+id/tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text1"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/tv_experience"
            app:layout_constraintTop_toBottomOf="@id/tv_experience"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_already_respond"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/dark_green"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_schedule"
            app:layout_constraintEnd_toStartOf="@id/view"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tv_already_respond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="140dp"
                    style="@style/Text1"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:gravity="start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:id="@+id/ic_man"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_man"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_already_respond"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_now_looking"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/dark_green"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_schedule"
            app:layout_constraintStart_toEndOf="@id/view"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tv_now_looking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="140dp"
                    style="@style/Text1"
                    android:layout_marginStart="8dp"
                    android:gravity="start"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:id="@+id/ic_now_looking"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_now_watch"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_map"
            android:layout_width="0dp"
            android:layout_height="134dp"
            android:backgroundTint="@color/cv_background"
            app:cardCornerRadius="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_now_looking"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Title3"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <ImageView
                    android:id="@+id/ic_verificated"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_verificated"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/tv_company"
                    app:layout_constraintTop_toTopOf="@id/tv_company"
                    app:layout_constraintBottom_toBottomOf="@id/tv_company"
                    />
                <ImageView
                    android:id="@+id/im_map"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_map"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_company"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text1"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/im_map"
                    app:layout_constraintStart_toStartOf="@id/im_map"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Text1"
            android:textColor="@color/white"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_map"
            />

        <TextView
            android:id="@+id/tv_your_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title2"
            android:textColor="@color/white"
            android:text="@string/your_tasks"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:layout_constraintStart_toStartOf="@id/tv_description"
            />
        <TextView
            android:id="@+id/tv_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Text1"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="@id/tv_your_tasks"
            app:layout_constraintTop_toBottomOf="@id/tv_your_tasks"
            />
        <TextView
            android:id="@+id/tv_ask_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title4"
            android:textColor="@color/white"
            android:text="@string/ask_question"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tasks"
            app:layout_constraintStart_toStartOf="@id/tv_tasks"
            />
        <TextView
            android:id="@+id/tv_he_get_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title4"
            android:textColor="@color/ed_hint_text"
            android:text="@string/he_get_it"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_ask_question"
            app:layout_constraintStart_toStartOf="@id/tv_ask_question"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_questions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_he_get_it"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_respond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/b_green_background"
            app:cornerRadius="8dp"
            style="@style/ButtonText1"
            android:textColor="@color/white"
            android:text="@string/respond"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/rv_questions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>