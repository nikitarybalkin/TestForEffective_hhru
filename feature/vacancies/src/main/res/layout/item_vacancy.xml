<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:backgroundTint="@color/cv_background"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_now_watching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/b_green_background"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="14sp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <ImageView
                android:id="@+id/ic_heart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart_not_activeted"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/tv_vocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_now_watching"
                app:layout_constraintStart_toStartOf="@id/tv_now_watching"
                />
            <TextView
                android:id="@+id/tv_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_vocation"
                app:layout_constraintStart_toStartOf="@id/tv_vocation"
                />
            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_town"
                app:layout_constraintStart_toStartOf="@id/tv_town"
                />
            <ImageView
                android:id="@+id/ic_verificated"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_verificated"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/tv_company"
                app:layout_constraintBottom_toBottomOf="@id/tv_company"
                app:layout_constraintStart_toEndOf="@id/tv_company"
                />
            <ImageView
                android:id="@+id/ic_experience"
                android:layout_width="12dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_experience"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_company"
                app:layout_constraintStart_toStartOf="@id/tv_company"
                />

            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/ic_experience"
                app:layout_constraintTop_toTopOf="@id/ic_experience"
                app:layout_constraintBottom_toBottomOf="@id/ic_experience"
                />
            <TextView
                android:id="@+id/tv_date_of_publication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ed_hint_text"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/ic_experience"
                app:layout_constraintTop_toBottomOf="@id/ic_experience"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/b_respond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/b_green_background"
                app:cornerRadius="50dp"
                android:text="@string/respond"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_date_of_publication"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>