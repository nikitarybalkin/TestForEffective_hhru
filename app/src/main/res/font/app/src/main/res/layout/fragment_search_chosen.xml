<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/search2_rounded_corners"
        />
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="@id/iv_search"
        app:layout_constraintBottom_toBottomOf="@id/iv_search"
        app:layout_constraintStart_toStartOf="@id/iv_search"
        android:layout_marginStart="8dp"
        />
    <ImageView
        android:id="@+id/iv_turnOver"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/turn_over"
        app:layout_constraintBottom_toTopOf="@id/line1"
        app:layout_constraintEnd_toEndOf="@id/line1"
        />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/cancel"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@id/line1"
        />


    <EditText
        android:id="@+id/ed1_from_where"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/sf_pro_display_medium"
        style="@style/NoUnderlineEditText"
        android:inputType="text"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/iv_search"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:textColorHint="@color/ed_hint"
        android:layout_marginBottom="8dp"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintStart_toStartOf="@id/ed1_from_where"
        app:layout_constraintTop_toTopOf="@id/ed1_from_where"
        app:layout_constraintEnd_toEndOf="@id/iv_search"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/ed2_to_where"
        />
    <EditText
        android:id="@+id/ed2_to_where"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/sf_pro_display_medium"
        style="@style/NoUnderlineEditText"
        android:inputType="text"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/ed_hint"
        app:layout_constraintBottom_toBottomOf="@id/iv_search"
        app:layout_constraintStart_toStartOf="@id/ed1_from_where"
        android:layout_marginBottom="18dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_search"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/iv_background_direct_flights"
        android:layout_width="0dp"
        android:layout_height="288dp"
        app:layout_constraintTop_toBottomOf="@id/rv_filters"
        android:layout_marginTop="12dp"
        android:src="@drawable/direct_flights_rouded_corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />
    <TextView
        android:id="@+id/tv_direct_flights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_background_direct_flights"
        app:layout_constraintStart_toStartOf="@id/iv_background_direct_flights"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/direct_flights"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/white"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/iv_red_circle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/red_circle"
        app:layout_constraintStart_toStartOf="@id/iv_background_direct_flights"
        app:layout_constraintTop_toBottomOf="@id/tv_direct_flights"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/tv_name_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_lightitalic"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/iv_red_circle"
        app:layout_constraintStart_toEndOf="@id/iv_red_circle"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/tv_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 390 ₽"
        android:textSize="14sp"
        android:textColor="@color/price_color"
        android:fontFamily="@font/sf_pro_display_lightitalic"
        app:layout_constraintTop_toTopOf="@id/tv_name_red"
        app:layout_constraintEnd_toStartOf="@id/iv_right"
        />
    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_name_red"
        app:layout_constraintEnd_toEndOf="@id/iv_background_direct_flights"
        android:layout_marginEnd="14dp"
        android:src="@drawable/right"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_display_light"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_red"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/iv_right"
        app:layout_constraintStart_toStartOf="@id/tv_name_red"
        />
    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintStart_toStartOf="@id/iv_red_circle"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintEnd_toEndOf="@id/iv_right"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/iv_blue_circle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/blue_circle"
        app:layout_constraintStart_toStartOf="@id/iv_background_direct_flights"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/tv_name_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_lightitalic"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/iv_blue_circle"
        app:layout_constraintStart_toEndOf="@id/iv_blue_circle"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/tv_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 390 ₽"
        android:textSize="14sp"
        android:textColor="@color/price_color"
        android:fontFamily="@font/sf_pro_display_lightitalic"
        app:layout_constraintTop_toTopOf="@id/tv_name_blue"
        app:layout_constraintEnd_toStartOf="@id/iv_right2"
        />
    <ImageView
        android:id="@+id/iv_right2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_name_blue"
        app:layout_constraintEnd_toEndOf="@id/iv_background_direct_flights"
        android:layout_marginEnd="14dp"
        android:src="@drawable/right"
        />
    <TextView
        android:id="@+id/tv_time2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_display_light"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_blue"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/iv_right2"
        app:layout_constraintStart_toStartOf="@id/tv_name_blue"
        />
    <View
        android:id="@+id/line3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintStart_toStartOf="@id/iv_blue_circle"
        app:layout_constraintTop_toBottomOf="@id/tv_time2"
        app:layout_constraintEnd_toEndOf="@id/iv_right"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/iv_white_circle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/white_circle"
        app:layout_constraintStart_toStartOf="@id/iv_background_direct_flights"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/tv_name_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_lightitalic"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/iv_white_circle"
        app:layout_constraintStart_toEndOf="@id/iv_white_circle"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/tv_price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 390 ₽"
        android:textSize="14sp"
        android:textColor="@color/price_color"
        android:fontFamily="@font/sf_pro_display_lightitalic"
        app:layout_constraintTop_toTopOf="@id/tv_name_white"
        app:layout_constraintEnd_toStartOf="@id/iv_right3"
        />
    <ImageView
        android:id="@+id/iv_right3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_name_white"
        app:layout_constraintEnd_toEndOf="@id/iv_background_direct_flights"
        android:layout_marginEnd="14dp"
        android:src="@drawable/right"
        />
    <TextView
        android:id="@+id/tv_time3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_display_light"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_white"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/iv_right3"
        app:layout_constraintStart_toStartOf="@id/tv_name_white"
        />
    <View
        android:id="@+id/line4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintStart_toStartOf="@id/iv_white_circle"
        app:layout_constraintTop_toBottomOf="@id/tv_time3"
        app:layout_constraintEnd_toEndOf="@id/iv_right"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/show_all"
        android:textColor="@color/price_color"
        android:fontFamily="@font/sf_pro_display_medium"
        app:layout_constraintTop_toBottomOf="@id/line4"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/b_look_all"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:backgroundTint="#2261BC"
        app:cornerRadius="8dp"
        android:textColor="@color/white"
        android:text="@string/look_all_tickets"
        android:fontFamily="@font/sf_pro_display_mediumitalic"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_background_direct_flights"
        android:layout_marginTop="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>